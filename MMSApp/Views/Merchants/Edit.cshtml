@model MMSApp.Models.Merchant

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Merchant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PspId" class="control-label"></label>
                <select asp-for="PspId" class="form-control" asp-items="ViewBag.PspId"></select>
                <span asp-validation-for="PspId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcceptorCode" class="control-label"></label>
                <input asp-for="AcceptorCode" class="form-control" />
                <span asp-validation-for="AcceptorCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TerminalNo" class="control-label"></label>
                <input asp-for="TerminalNo" class="form-control" />
                <span asp-validation-for="TerminalNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MerchantStateId" class="control-label"></label>
                <select asp-for="MerchantStateId" class="form-control" asp-items="ViewBag.MerchantStateId"></select>
                <span asp-validation-for="MerchantStateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TerminalTypeId" class="control-label"></label>
                <select asp-for="TerminalTypeId" class="form-control" asp-items="ViewBag.TerminalTypeId"></select>
                <span asp-validation-for="TerminalTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="merchantKey" class="control-label"></label>
                <input asp-for="merchantKey" class="form-control" />
                <span asp-validation-for="merchantKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PSPUser" class="control-label"></label>
                <input asp-for="PSPUser" class="form-control" />
                <span asp-validation-for="PSPUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PSPPassword" class="control-label"></label>
                <input asp-for="PSPPassword" class="form-control" />
                <span asp-validation-for="PSPPassword" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CreatorUserId" class="control-label"></label>
                <input asp-for="CreatorUserId" class="form-control" />
                <span asp-validation-for="CreatorUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdaterUserId" class="control-label"></label>
                <input asp-for="UpdaterUserId" class="form-control" />
                <span asp-validation-for="UpdaterUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateTime" class="control-label"></label>
                <input asp-for="UpdateTime" class="form-control" />
                <span asp-validation-for="UpdateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
